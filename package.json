{
    "name": "notes-app",
    "version": "1.0.0",
    "description": "Very handy notes application!",
    "repository": "https://github.com/ArturJS/ArturJS.github.io",
    "main": "index.js",
    "scripts": {
        "e2e": "docker-compose --file docker-compose.e2e.yml up | grep nightwatch",
        "e2e:rebuild:ui-service": "docker-compose --file docker-compose.e2e.yml up --no-deps --build ui-service",
        "start": "npx npm-run-all --parallel start:api-gateway start:api-service start:ui-service",
        "start:api-gateway": "cd api-gateway && npm start",
        "start:api-service": "cd api-service && npm start",
        "start:ui-service": "cd ui-service && npm start",
        "precommit": "cd ui-service && lint-staged && cd ../api-service && lint-staged",
        "postcommit": "git update-index --again",
        "postinstall": "cd ui-service && npm install && cd ../api-service && npm install",
        "test": "cd ui-service && npm test && cd ../api-service && npm test"
    },
    "keywords": [],
    "author": "ArturJS",
    "license": "MIT",
    "devDependencies": {
        "husky": "0.14.3"
    },
    "dependencies": {
        "npm-run-all": "4.1.3"
    }
}
