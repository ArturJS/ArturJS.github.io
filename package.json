{
    "name": "notes-app",
    "version": "1.0.0",
    "description": "Very handy notes application!",
    "main": "index.js",
    "scripts": {
        "build": "preact build",
        "build:docker": "npm install preact-cli && preact build",
        "build:no-prerender": "npx preact build --no-prerender",
        "db:create": "npx sequelize db:create",
        "db:migrate": "npx sequelize db:migrate",
        "dev": "npx preact watch",
        "flow": "node ./scripts/tasks/flow.js",
        "precommit": "lint-staged",
        "postcommit": "git update-index --again",
        "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
        "server": "node server/index.js",
        "server:dev": "npx nodemon server/index.js",
        "serve": "npx preact build && npx preact serve",
        "test": "eslint src && preact test"
    },
    "lint-staged": {
        "src/**/*.{js,jsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ],
        "server/**/*.{js,mjs}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "babel-eslint": "8.1.2",
        "babel-plugin-lodash": "3.3.2",
        "babel-plugin-syntax-flow": "6.18.0",
        "babel-plugin-transform-async-to-promises": "0.4.0",
        "babel-plugin-transform-flow-strip-types": "6.22.0",
        "babel-plugin-transform-react-jsx": "6.24.1",
        "babel-plugin-transform-regenerator": "6.26.0",
        "eslint": "4.14.0",
        "eslint-config-airbnb-base": "12.1.0",
        "eslint-config-prettier": "2.9.0",
        "eslint-config-standard-preact": "1.1.6",
        "eslint-plugin-flowtype": "2.41.0",
        "eslint-plugin-import": "2.8.0",
        "eslint-plugin-prettier": "2.4.0",
        "flow-bin": "0.63.1",
        "husky": "0.14.3",
        "if-env": "1.0.0",
        "lint-staged": "6.0.0",
        "node-sass": "4.7.2",
        "nodemon": "1.17.2",
        "prettier": "1.9.2",
        "prop-types": "15.6.0",
        "sass-loader": "6.0.6",
        "webpack-bundle-analyzer": "2.9.1"
    },
    "dependencies": {
        "@koa/cors": "2.2.1",
        "@std/esm": "0.25.3",
        "axios": "0.18.0",
        "classnames": "2.2.5",
        "dotenv-safe": "5.0.1",
        "final-form": "3.0.0",
        "http-status-codes": "1.3.0",
        "immer": "1.1.3",
        "koa": "2.5.0",
        "koa-bodyparser": "4.2.0",
        "koa-compress": "2.0.0",
        "koa-favicon": "2.0.0",
        "koa-mount": "3.0.0",
        "koa-passport": "4.0.1",
        "koa-router": "7.4.0",
        "koa-session": "5.0.0",
        "koa-static": "4.0.2",
        "koa-static-cache": "5.1.2",
        "lodash": "4.17.4",
        "passport-google-oauth": "1.0.0",
        "pg": "7.4.1",
        "pg-hstore": "2.3.2",
        "preact": "8.2.7",
        "preact-compat": "3.17.0",
        "preact-render-to-string": "3.7.0",
        "preact-router": "2.6.0",
        "react-collapse": "4.0.3",
