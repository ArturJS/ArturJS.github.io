{
    "name": "notes-app",
    "version": "1.0.0",
    "description": "Very handy notes application!",
    "repository": "https://github.com/ArturJS/ArturJS.github.io",
    "main": "index.js",
    "scripts": {
        "build": "preact build",
        "build:docker": "npm install preact-cli && preact build",
        "build:no-prerender": "npx preact build --no-prerender",
        "db:create": "npx sequelize db:create",
        "db:migrate": "npx sequelize db:migrate",
        "dev": "npx preact watch",
        "flow": "node ./scripts/tasks/flow.js",
        "precommit": "lint-staged",
        "postcommit": "git update-index --again",
        "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
        "server": "node server/index.js",
        "server:dev": "npx nodemon server/index.js",
        "serve": "npx preact build && npx preact serve",
        "test": "npx jest --env=jsdom",
        "test:watch": "npx jest --watch --env=jsdom",
        "test:coverage": "npx jest --coverage --env=jsdom"
    },
    "lint-staged": {
        "src/**/*.{js,jsx}": [
            "prettier --write",
            "eslint --fix",
            "jest --bail --findRelatedTests --env=jsdom",
            "git add"
        ],
        "server/**/*.{js,mjs}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "server/**/*.mjs",
            "src/**/*.{js,jsx}",
            "!server/**/index.mjs",
            "!src/**/*.test.{js,jsx}",
            "!src/**/*index.{js,jsx}"
        ],
        "setupFiles": [
            "<rootDir>/scripts/jest/__mocks__/browser-mocks.js"
        ],
        "testURL": "http://localhost:8080",
        "transform": {
            "\\.(js|jsx|mjs)$": "./scripts/jest/transform-preprocessor.js",
            "^.+\\.scss$": "./scripts/jest/css-transform.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(m?jsx?)$",
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "mjs"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
            "\\.(css|less|scss)$": "identity-obj-proxy",
            "^./style$": "identity-obj-proxy",
            "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
            "^react$": "preact-compat",
            "^react-dom$": "preact-compat",
            "^create-react-class$": "preact-compat/lib/create-react-class",
            "^react-addons-css-transition-group$": "preact-css-transition-group"
        },
        "verbose": true
    },
    "keywords": [],
    "author": "ArturJS",
    "license": "ISC",
    "devDependencies": {
        "@babel/preset-env": "7.0.0-beta.44",
        "@babel/preset-flow": "7.0.0-beta.44",
        "babel-eslint": "8.1.2",
        "babel-jest": "22.4.3",
        "babel-plugin-flow-runtime": "0.17.0",
        "babel-plugin-lodash": "3.3.2",
        "babel-plugin-syntax-flow": "6.18.0",
        "babel-plugin-transform-async-to-promises": "0.4.0",
        "babel-plugin-transform-decorators-legacy": "1.3.4",
        "babel-plugin-transform-flow-strip-types": "6.22.0",
        "babel-plugin-transform-react-jsx": "6.24.1",
        "babel-plugin-transform-regenerator": "6.26.0",
        "babel-preset-flow": "6.23.0",
        "eslint": "4.14.0",
        "eslint-config-airbnb-base": "12.1.0",
        "eslint-config-prettier": "2.9.0",
        "eslint-config-standard-preact": "1.1.6",
        "eslint-plugin-flowtype": "2.41.0",
        "eslint-plugin-import": "2.8.0",
        "eslint-plugin-jest": "21.15.0",
        "eslint-plugin-prettier": "2.4.0",
        "flow-bin": "0.63.1",
        "flow-runtime": "0.17.0",
        "husky": "0.14.3",
        "if-env": "1.0.0",
        "jest": "22.4.3",
        "jest-runtime": "22.4.3",
        "lint-staged": "6.0.0",
        "node-sass": "4.7.2",
        "nodemon": "1.17.2",
        "preact-cli": "2.2.1",
        "prettier": "1.9.2",
        "prop-types": "15.6.0",
        "sass-loader": "6.0.6",
        "webpack-bundle-analyzer": "2.9.1"
    },
    "dependencies": {
        "@babel/core": "7.0.0-beta.44",
        "@babel/register": "7.0.0-beta.44",
        "@koa/cors": "2.2.1",
        "@std/esm": "0.25.3",
        "axios": "0.18.0",
        "classnames": "2.2.5",
        "dotenv-safe": "5.0.1",
        "final-form": "4.5.2",
        "http-status-codes": "1.3.0",
        "immer": "1.1.3",
        "koa": "2.5.0",
        "koa-bodyparser": "4.2.0",
        "koa-compress": "2.0.0",
        "koa-favicon": "2.0.0",
        "koa-mount": "3.0.0",
        "koa-passport": "4.0.1",
        "koa-router": "7.4.0",
        "koa-session": "5.0.0",
