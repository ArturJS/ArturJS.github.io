{
  "extends": [
    "airbnb-base",
    "prettier",
    "standard-preact"
  ],
  "plugins": [
    "flowtype"
  ],
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-no-bind": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "class-methods-use-this": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ]
  },
  "globals": {
    "window": true,
    "document": true,
    "$Exact": true,
    "File": true,
    "SyntheticInputEvent": true,
    "HTMLInputElement": true
  }
}
