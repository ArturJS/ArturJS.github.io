{
    "extends": [
        "airbnb",
        "airbnb-base",
        "prettier",
        "plugin:jest/recommended",
        "plugin:flowtype/recommended"
    ],
    "plugins": ["flowtype", "jest"],
    "parser": "babel-eslint",
    "rules": {
        "react/jsx-no-bind": 0,
        "react/jsx-indent": 0,
        "react/jsx-indent-props": 0,
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "import/extensions": [
            "error",
            "always",
            {
                "js": "never",
                "jsx": "never",
                "mjs": "never"
            }
        ],
        "linebreak-style": 0,
        "jsx-quotes": ["error", "prefer-double"],
        "class-methods-use-this": 0,
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".mjs"]
            }
        }
    },
    "globals": {
        "window": true,
        "document": true,
        "$Exact": true,
        "File": true,
        "SyntheticInputEvent": true,
        "HTMLInputElement": true,
        "FormData": true
    }
}
